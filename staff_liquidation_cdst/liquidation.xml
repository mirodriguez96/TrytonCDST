<tryton>
    <data>
        <!-- ################################################################################## -->
        <!-- #          Interfaz para nuevos campos en la vista de liquidacion                # -->
        <!-- ################################################################################## -->
        <record model="ir.ui.view" id="liquidation_view_form">
            <field name="model">staff.liquidation</field>
            <field name="inherit" ref="staff_payroll_co.liquidation_view_form"/>
            <field name="name">liquidation_form</field>
        </record>
        <record model="ir.action.act_window.domain" id="act_liquidation_form_domain_wait">
            <field name="name">Wait</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', '=', 'wait')]" pyson="1"/>
            <field name="act_window" ref="staff_payroll_co.act_liquidation_form"/>
        </record>

        <record model="ir.ui.view" id="liquidation_line_view_form">
            <field name="model">staff.liquidation.line</field>
            <field name="inherit" ref="staff_payroll_co.liquidation_line_view_form"/>
            <field name="name">liquidation_line_form</field>
        </record>
        <record model="ir.ui.view" id="liquidation_line_view_tree">
            <field name="model">staff.liquidation.line</field>
            <field name="inherit" ref="staff_payroll_co.liquidation_line_view_tree"/>
            <field name="name">liquidation_line_tree</field>
        </record>


        <!-- ###################################### -->
        <!-- # Create detail liquidation report   # -->
        <!-- ###################################### -->
        <record model="ir.action.wizard" id="act_create_liquidation_detail_report">
            <field name="name">Detail Liquidation</field>
            <field name="wiz_name">staff.liquidation.detail_liquidation</field>
        </record>
        <record model="ir.action.keyword" id="act_create_liquidation_detail_report_keyword">
            <field name="keyword">form_action</field>
            <field name="model">staff.liquidation,-1</field>
            <field name="action" ref="act_create_liquidation_detail_report"/>
        </record>
        <record model="ir.action.report" id="report_detail_liquidation">
            <field name="name">Detail Liquidation</field>
            <field name="model">staff.liquidation</field>
            <field name="report_name">staff.liquidation.detail_liquidation_report</field>
            <field name="report">staff_liquidation_cdst/liquidation_detail.fodt</field>
            <field name="template_extension">ods</field>
            <field name="translatable">False</field>
        </record>
    </data>
</tryton>