<tryton>
    <data>

        <record model="ir.ui.view" id="bank_statement_bank_line_view_form">
            <field name="model">account.bank_statement.bank_line</field>
            <field name="type">form</field>
            <field name="name">bank_line_form</field>
        </record>

        <record model="ir.ui.view" id="bank_statement_bank_line_view_list">
            <field name="model">account.bank_statement.bank_line</field>
            <field name="type">tree</field>
            <field name="name">bank_line_list</field>
        </record>

        <record model="ir.ui.view" id="bank_statement_form_view">
            <field name="model">account.bank_statement</field>
            <field name="inherit" ref="account_bank_statement.bank_statement_form_view"/>
            <field name="name">bank_statement_form</field>
        </record>

        <record model="ir.ui.view" id="bank_statement_line_tree_view">
            <field name="model">account.bank_statement.line</field>
            <field name="inherit" ref="account_bank_statement.bank_statement_line_tree_view"/>
            <field name="name">bank_statement_line_tree</field>
        </record>
        <record model="ir.ui.view" id="bank_statement_line_form_view">
            <field name="model">account.bank_statement.line</field>
            <field name="inherit" ref="account_bank_statement.bank_statement_line_form_view"/>
            <field name="name">bank_statement_line_form</field>
        </record>

        <!-- #################### -->
        <!-- # Create Bank_line # -->
        <!-- #################### -->
        <record model="ir.action.wizard" id="act_create_bank_line">
            <field name="name">Upload Bank lines</field>
            <field name="wiz_name">account.bank_statement.create_bank_line</field>
        </record>
        <record model="ir.action.keyword" id="act_create_bank_line_keyword">
            <field name="keyword">form_action</field>
            <field name="model">account.bank_statement,-1</field>
            <field name="action" ref="act_create_bank_line"/>
        </record>
        <!-- ############################### -->
        <!-- # Create Bank_line Parameters # -->
        <!-- ############################### -->
        <record model="ir.ui.view" id="create_bank_line_parameters_view_form">
            <field name="model">account.bank_statement.create_bank_line.parameters</field>
            <field name="type">form</field>
            <field name="name">create_bank_line_parameters_form</field>
        </record>

    </data>
</tryton>